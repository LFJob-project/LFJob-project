<div class="jobs-list">
  <h1 class="mt-3 mb-3 text-center">Companies list</h1>
  
  <div class="container">
    <div class="row" style="margin: -10px;">
      {{#each companies}}
      
      <div class="col-12 col-sm-6 col-md-4 col-lg-3 product mb-3" style="padding: 10px;">
        <div class="card h-100">
          <div class="card-body">
            <h5 class="card-title">{{this.name}}</h5>
            <h6 class="card-subtitle mb-2 text-body-secondary"><a href="{{this.url}}" target="_blank">{{this.url}}</a></h6>
            <h6 class="card-subtitle mb-2 text-body-secondary">{{this.location}}</h6>
            <h6 class="card-subtitle mb-2 text-body-secondary">Est:{{this.established}}</h6>
            <h6 class="card-subtitle mb-2 text-body-secondary">Nr.Employees:{{this.employees}}</h6>
            <a href="/companies/{{this.id}}" class="card-link btn btn-primary" style="width: 8rem;">Show Jobs</a>
          </div>
        </div>
      </div>
      
      {{/each}}
    </div>
  </div>
</div>