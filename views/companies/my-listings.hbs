<h1 class="mt-3 mb-3 text-center">My listings</h1>
  
{{#if jobs}}
<div class="container ">
  <div class="row">
  {{#each jobs}} 


  <div class="col-12 col-sm-6 col-md-4 product mb-3">
    <div class="card" style="width: 18rem; height:14rem;">
      <div class="card-body">

        <h5 class="card-title">{{this.title}}</h5>
        <h6 class="card-subtitle mb-2 text-body-secondary">{{this.company.name}}</h6>
        <h6 class="card-subtitle mb-2 text-body-secondary">{{this.location}}</h6>
        <p class="card-text">{{this.jobDescription}}</p>
        <a href="/jobs/{{this.id}}" class="card-link btn btn-primary">Details</a>
        <a href="/jobs/{{this.id}}/update" class="card-link btn btn-primary">Update</a>
        

        <form method="POST" action="/jobs/{{this.id}}/delete">
          <button type="submit" class="btn btn-danger">Delete</button>
        </form>
      

      </div>
    </div>
  </div>
  {{/each}}
    </div>
</div>
{{else}}
<h1>You have not uploaded any listings</h1>
{{/if}}