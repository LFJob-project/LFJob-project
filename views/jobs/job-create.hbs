

<!-- Company form -->
<h1>Company</h1>
<form method="post" action="/jobs/create">
<div class="input-group mb-3">
  <input type="text" class="form-control" placeholder="Company Name" aria-label="company name" aria-describedby="basic-addon1" name="name">
</div>

<div class="input-group mb-3">
  <input type="number" class="form-control" placeholder="Established" aria-label="established" aria-describedby="basic-addon2" min="1900" max="2023" name="established">
  </div>

<div class="input-group mb-3">
  <input type="number" class="form-control" placeholder="Number of employees" aria-label="employees" aria-describedby="basic-addon2" min="0" max="50000" name="employees">
  </div>

<div class="mb-3">
  <label for="basic-url" class="form-label">Your vanity URL</label>
  <div class="input-group">
    <span class="input-group-text" id="basic-addon3">https://example.com/users/</span>
    <input type="text" class="form-control" id="basic-url" aria-describedby="basic-addon3 basic-addon4" name="url">
  </div>
</div>

<div class="input-group mb-5">
  <span class="input-group-text">Company description</span>
  <textarea class="form-control" aria-label="With textarea" name="companyDescription"></textarea>
</div>



<!-- Job form -->
<h1>Job alert</h1>

<div class="input-group mb-3">
  <input type="text" class="form-control" placeholder="Job title" aria-label="job title" name="title">
</div>

<div class="input-group mb-3">
  <input type="text" class="form-control" placeholder="Location" aria-label="job location" name="location">
</div>

<div class="input-group mb-3">
  <span class="input-group-text">Job description</span>
  <textarea class="form-control" placeholder="please describe briefly" aria-label="With textarea" name="jobDescription" maxlength="100"></textarea>
</div>

<div class="input-group mb-3">
  <span class="input-group-text">Job Details</span>
  <textarea class="form-control" placeholder="job details" aria-label="With textarea" name="details"></textarea>
</div>



<div class="input-group mb-3">
  <span class="input-group-text">Salary</span>
  <input type="number" placeholder="salary" class="form-control" aria-label="Amount" name="salary" min="0" max="1000000">
</div>


<button type="Submit">Submit</button>

</form>
