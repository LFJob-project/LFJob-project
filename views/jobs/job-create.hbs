<!-- Job form -->
<div id="create-job-container">
 <h1 class="mt-3 mb-3 text-center">Create your job alert</h1>
<div class="create-job-form">
<form method="post" action="/jobs/create">
{{#if errorMessage}}
  <p class="error">{{errorMessage}}</p>
{{/if}}
<div class="input-group mb-3 ">
  <input type="text" class="form-control" placeholder="Job title" aria-label="job title" name="title" maxlength="100">
</div>

<div class="input-group mb-3 ">
  <input type="text" class="form-control" placeholder="Location" aria-label="job location" name="location">
</div>

<div class="input-group mb-3">
  <span class="input-group-text">Job description</span>
  <textarea class="form-control" placeholder="please describe briefly" aria-label="With textarea" name="jobDescription" maxlength="150"></textarea>
</div>

<div class="input-group mb-3">
  <span class="input-group-text">Job Details</span>
  <textarea class="form-control" placeholder="job details" aria-label="With textarea" name="details"></textarea>
</div>



<div class="input-group mb-3">
  <span class="input-group-text">Salary</span>
  <input type="text" placeholder="salary" class="form-control" aria-label="Amount" name="salary">
</div>


<button class="create-job-btn" type="Submit">Submit</button>

</form>
</div>
</div>